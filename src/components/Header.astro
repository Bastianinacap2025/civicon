---
const navItems = [
  { href: '/', text: 'Inicio' },
  { href: '/votaciones', text: 'Votaciones' },
  { href: '/foros', text: 'Foros' },
  { href: '/microcursos', text: 'Microcursos' },
  { href: '/gamificacion', text: 'Gamificación' },
];
---

<header class="fixed w-full bg-white dark:bg-gray-900 shadow-md z-60">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <img 
          src="/public/img/civicon-nigga.png"
          style="width: 180px;"
          alt="CivicON Logo" 
          class="h-10 w-auto block dark:hidden rounded-lg"
        />
        <img 
          src="https://github.com/Bastianinacap2025/imagenes/blob/main/civicon-bl.png?raw=true"
          style="width: 180px;"
          alt="CivicON Logo" 
          class="h-10 w-auto hidden dark:block rounded-lg"
        />
      </a>

      <!-- Navigation -->
      <nav style="width: 130px;" class="hidden md:flex items-center space-x-6">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-gray-600 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-400 transition-colors"
          >
            {item.text}
          </a>
        ))}
      </nav>

      <!-- Auth & Dark Mode -->
      <div class="flex items-center space-x-4">
        <a 
          href="/login" 
          class="text-gray-600 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-400 transition-colors"
        >
          Iniciar sesión
        </a>
        <a 
          href="/register" 
          class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors"
        >
          Registrarse
        </a>
        <!-- 
        <button
          id="theme-toggle"
          class="p-2 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors"
          aria-label="Toggle dark mode"
        >
          <i class="fas fa-sun text-xl block dark:hidden"></i>
          <i class="fas fa-moon text-xl hidden dark:block"></i>
        </button> -->
      </div>

      <!-- Mobile menu button -->
      <button 
        class="md:hidden p-2 text-gray-600 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-400"
        id="mobile-menu-button"
        aria-label="Open mobile menu"
      >
        <i class="fas fa-bars text-xl"></i>
      </button>
    </div>

    <!-- Mobile menu -->
    <div 
      id="mobile-menu" 
      class="hidden md:hidden mt-4 pb-4"
    >
      {navItems.map(item => (
        <a 
          href={item.href}
          class="block py-2 text-gray-600 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-400 transition-colors"
        >
          {item.text}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    document.dispatchEvent(
      new CustomEvent('theme-change', { 
        detail: { theme: isDark ? 'light' : 'dark' } 
      })
    );
  });

  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
